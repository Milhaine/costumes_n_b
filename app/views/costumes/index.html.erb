<div class="banner">
  <iframe src='https://my.spline.design/bmoadventuretimecopy-e506a927aff31772bdf64bd3e3bc4733/' frameborder='0' width='100%' height='100%'></iframe>
  <div class="layout">
    <div class="empty"></div>
    <div class="content">
      <h1>Un super titre</h1>
      <p>Une phrase d'accroche qui déchire</p>
      <div class="search_form">
        <%= form_tag(costumes_path, method: :get) do %>
        <%= text_field_tag :query, params[:query], placeholder: "Quelle beauté cherches tu?" %>
        <%= submit_tag "Rechercher" %>
        <% end %>
      </div>
    </div>
    <div class="empty"></div>
  </div>
</div>





<div class="container">
  <% @costumes.each do |costume| %>
    <div class="card" >
      <div class="card-image">
        <%= link_to costume_path(costume) do %>
          <% if  costume.url %>
            <%= image_tag costume.url %>
          <% else %>
            <%= cl_image_tag costume.photo.key %>
          <% end %>
        <% end %>
      </div>
      <div class="info">
        <div class="name">
          <%= link_to costume.name, costume_path(costume), class:"lien"  %>
        </div>
        <div class="type">
          <%= costume.costume_type %>
        </div>
        <%= link_to "Louer cette beauté", new_costume_rental_path(costume), class:"bouton"  %>
      </div>
    </div>
  <% end %>
</div>
